+
+  nargv[0] = "0";   /* version */
+  nargv[3] = "4096";  /* hash block size */
+  nargv[4] = "4096";  /* data block size */
+  nargv[9] = "-";   /* salt (optional) */
+
+  for (i = 0; i < argc; ++i) {
+    DMDEBUG("Argument %d: '%s'", i, argv[i]);
+    splitarg(argv[i], &key, &val);
