+        errstr = "Failed to allocate memory";
+        goto err;
+      }
+      scnprintf(hashstart, sizeof(hashstart), "%lu", num);
+      nargv[5] = hashstart;
+      nargv[6] = hashstart;
+    } else if (!strcmp(key, "salt")) {
+      nargv[9] = val;
+    } else if (!strcmp(key, DM_VERITY_OPT_ERROR_BEHAVIOR)) {
+      char *behavior = verity_parse_error_behavior(val);
