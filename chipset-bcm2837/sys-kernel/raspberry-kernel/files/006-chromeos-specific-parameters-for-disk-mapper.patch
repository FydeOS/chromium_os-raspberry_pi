+static char *chromeos_args(unsigned *pargc, char ***pargv)
+{
+  char *hashstart = NULL;
+  char **argv = *pargv;
+  int argc = *pargc;
+  char *key, *val;
+  int nargc = 10;
+  char **nargv;
